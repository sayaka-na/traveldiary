<% content_for :css do %>
  <%= stylesheet_link_tag 'new' %>
<% end %>

<div class="form">
  <div class="container">
    <h2 class="login-title mb-4 pt-4">ログインページ</h2>
    <div class="row text-center">
      <div class="col-sm-6 offset-sm-3">
        
        <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
          
          <div class="form-group">
            <i class="far fa-envelope" aria-hidden="true"></i>
            <%= f.label :email, 'メールアドレス' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <i class="fas fa-lock" aria-hidden="true"></i>
            <%= f.label :password, 'パスワード' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-btn my-4 py-4">
            <%= f.submit 'ログイン', class: 'btn btn-success btn-block' %>
          </div>  
        <% end %>
      </div>
    </div>
    <div class="index-link py-4">
      <%= link_to 'トップページ', root_path, class: 'btn btn-outline-secondary active' %>
      <%= link_to '会員登録', signup_path, class: 'btn btn-outline-secondary' %>
    </div>  
  </div>
</div>
