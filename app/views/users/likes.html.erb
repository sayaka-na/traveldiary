<% content_for :css do %>
  <%= stylesheet_link_tag 'posts' %>
<% end %>

<div class="posts-index">
  <div class="container">
    <div class="new-title mb-4 py-4">
      <h1>お気に入り一覧</h1>
    </div>
  </div>

  <div class="new-card">
    <div class="container">
      <div class="row d-flex align-items-start">
        <div class="row col-lg-9 m-0">
          <% @likes.each do |post| %>
              <div class="card-group">
                <div class="row card mb-3" style="max-width: 700px;">
                  <div class="row no-gutters pr-0">
                      <div class="col-4 my-auto">
                        <%= image_tag post.images[0].to_s, class: 'card-img-top' %>
                      </div>
                      <!-- カードbody -->
                      <div class="col-8 p-1 p-lg-2">
                        <div class="card-body p-0">
                          <div class="card-titleContent mb-1 mb-sm-4">
                            <%= link_to post.title, post_path(post), class: 'card-index-title' %>
                            <p class="card-content m-0"><%= post.subject %></p>
                          </div>  
                          <!-- カードuser -->
                          <div class="d-flex card-user m-0">
                            <div class="card-user-img">
                              <% if post.user.profile_image? %>
                                <%= image_tag post.user.profile_image.to_s, :class => "profile_image", :alt => 'プロフィール画像' %>
                              <% else %>
                                <%= image_tag "/assets/default.png", :class => "profile_image", :alt => 'プロフィール画像' %>
                              <% end %>
                              <div class="card-user-nickname"><%= post.user.nickname %></div>
                            </div>
                              
                            <div class="card-user-time ms-auto p-md-2">
                              <span class="favorite-icon mt-sm-2"><i class="far fa-heart"></i><%= post.likers.count %></span>
                              <small class="text-muted"><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
                            <% if current_user == post.user %>
                              <%= link_to post, class: "btn btn-light btn-sm", method: :delete, data: { confirm: "本当に削除しますか？" } do %><i class="far fa-trash-alt"></i>
                              <% end %>
                            <% end %>
                            </div>
                          </div>
                          <!-- カードuser -->
                        </div>
                      </div>
                      <!-- カードbody 終了 -->
                  </div>
                </div><!-- row card 終了 -->
              </div><!-- カードgroup 終了 -->
          <% end %>
        </div>

