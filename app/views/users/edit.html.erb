<% content_for :css do %>
  <%= stylesheet_link_tag 'edit' %>
<% end %>

<div class="form">
  <div class="container py-4">
    <h2 class="login-title mb-4">プロフィール編集ページ</h2>
      <div class="row text-center">
        <div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3">
          <%= form_with(model: @user, local: true) do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>

            <div class="form-group">
              <i class="fas fa-user-alt" aria-hidden="true"></i>
              <%= f.label :name, '名前' %>
              <%= f.text_field :name, class: 'form-control', placeholder: '本名' %>
            </div>

            <div class="form-group">
              <i class="far fa-frown-open" aria-hidden="true"></i>
              <%= f.label :nickname, 'ペンネーム' %>
              <%= f.text_field :nickname, class: 'form-control', placeholder: 'みかん' %>
            </div>

            <div class="form-group">
              <i class="far fa-envelope" aria-hidden="true"></i>
              <%= f.label :email, 'メールアドレス' %>
              <%= f.email_field :email, class: 'form-control', placeholder: '123456789@.com' %>
            </div>

            <div class="form-group">
              <i class="fas fa-lock" aria-hidden="true"></i>
              <%= f.label :password, 'パスワード' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
            </div>
    
            <div class="form-group">
              <i class="fas fa-lock" aria-hidden="true"></i>
              <%= f.label :password_confirmation, 'パスワード確認' %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード確認' %>
            </div>

            <div class="my-4">
              <%= f.submit '投稿', class: 'btn btn-success btn-block' %>
            </div>  
          <% end %>
        </div>
      </div>  
    
    <div class="index-link">
      <%= link_to 'ホームに戻る', root_path, class: 'btn btn-outline-secondary active' %>
      <%= link_to '口コミ一覧へ', posts_path, class: 'btn btn-outline-secondary' %>
    </div>
  </div> 
</div>

